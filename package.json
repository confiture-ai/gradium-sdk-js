{
  "name": "@confiture-ai/gradium-sdk-js",
  "version": "0.1.0",
  "description": "Unofficial TypeScript SDK for the Gradium API",
  "author": "Majdi Toumi <majdi@confiture.ai>",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && tsc --emitDeclarationOnly",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "clean": "rm -rf dist",
    "prepare": "lefthook install",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "gradium",
    "tts",
    "stt",
    "text-to-speech",
    "speech-to-text",
    "ai",
    "voice",
    "audio",
    "streaming"
  ],
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "lefthook": "^1.11.13",
    "typescript": "^5.3.0",
    "ultracite": "^6.3.9"
  },
  "engines": {
    "node": ">=24"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/confiture-ai/gradium-sdk-js.git"
  },
  "homepage": "https://github.com/confiture-ai/gradium-sdk-js#readme",
  "bugs": {
    "url": "https://github.com/confiture-ai/gradium-sdk-js/issues"
  }
}
